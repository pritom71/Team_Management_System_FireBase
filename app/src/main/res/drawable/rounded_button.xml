<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="?attr/colorPrimary" /> <!-- Button background color -->
    <corners android:radius="8dp" /> <!-- Rounded corners -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" /> <!-- Padding inside the button -->
    <stroke
        android:width="2dp"
        android:color="#1E88E5" /> <!-- Optional border for the button -->
</shape>
